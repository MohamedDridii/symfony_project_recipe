{% extends 'admin/base.html.twig' %}

{% block title %}{{ recipe.title }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>{{ recipe.title }}</h1>

    <p><strong>Durée :</strong> {{ recipe.duration ?? 'Non spécifiée' }} minutes</p>

    <p><strong>Contenu :</strong></p>
    <p>{{ recipe.content }}</p>

    <p><strong>Date de création :</strong> {{ recipe.createdat|date('d/m/Y H:i') }}</p>
    <p><strong>Dernière mise à jour :</strong> {{ recipe.updatedAt|date('d/m/Y H:i') }}</p>

    <a href="{{ path('admin.recettes.index') }}" class="btn btn-secondary mt-3">← Retour à la liste</a>
</div>
{% endblock %}
